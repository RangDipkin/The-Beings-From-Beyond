<?xml version="1.0" encoding="UTF-8"?>

<shape_rule name="af_split2v" label="afsplit">   
    <constants>
        <constant value="0.20">s</constant>
    </constants>     
    <constraints>
        <inequality
            lhs="height"
            ineq="&lt;"
            rhs="5" />
        <inequality
            lhs="weight"
            ineq="&gt;"
            rhs="5"/>
        <inequality
            lhs="aspect"
            ineq="&gt;"
            rhs="0.2"/>
    </constraints>    
    <output>
        <shape-spec>
            <label>
                <value>afsplit</value>
                <weight>splitp</weight>
            </label>
            <label>
                <value>af_z</value>
                <weight>trudep</weight>
            </label>
            <vertex x="0" y="0" z="0"/>
            <vertex x="s" y="0" z="0"/>
            <vertex x="s" y="1" z="0"/>              
            <vertex x="0" y="1" z="0"/>             
        </shape-spec>        
        <shape-spec>
            <label>
                <value>afsplit</value>
                <weight>splitp</weight>
            </label>
            <label>
                <value>af_z</value>
                <weight>trudep</weight>
            </label>
            <vertex x="s" y="0" z="0"/>
            <vertex x="1" y="0" z="0"/> 
            <vertex x="1" y="1" z="0"/>                
            <vertex x="s" y="1" z="0"/>                
        </shape-spec>      
    </output>
</shape_rule>
